<div class="col s12">
    <div class="section">
        <div class="container">
            <table class="highlight bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Sponsor</th>
                    <th>View</th>
                </tr>
                </thead>

                <tbody>
                {{#each students}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{sponsor}}</td>
                    <td><a href="/student/{{_id}}"<i class="material-icons large">open_in_browser</i></a></td>
                </tr>
                {{/each}}

                </tbody>
            </table>
        </div>
    </div>
    <div class="section">
        <div class="container">
        <ul class="pagination">
            {{#if prePage}}
            <li class="waves-effect"><a href="/{{prePage}}"><i class="material-icons">chevron_left</i></a></li>
            {{/if}}

            {{#each pages}}
            <li class="{{#if active}}active{{else}}waves-effect{{/if}}"><a href="/{{page}}">{{page}}</a></li>
            {{/each}}

            {{#if postPage}}
            <li class="waves-effect"><a href="/{{postPage}}"><i class="material-icons">chevron_right</i></a></li>
            {{/if}}
        </ul>
        </div>
    </div>
</div>
